<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="ItQuasar\C4CorePetrocommercePaymentGateBundle\Entity\PetrocommerceBankTransaction" table="petrocommerce_bank_transactions">
        <field name="amount" type="float"/>
        <field name="currency" type="string"/>
        <field name="bankOrderNumber" type="integer" nullable="true"/>
        <field name="terminalId" type="string"/>
        <field name="transactionType" type="integer"/>
        <field name="timestamp" type="string"/>
        <field name="nonce" type="string"/>
        <field name="merchantId" type="string"/>
        <field name="messageAuthenticationCode" type="string" nullable="true"/>
        <field name="pSign" type="string" length="512" nullable="true"/>
        <field name="bankOrder" type="string" length="512" nullable="true"/>
    </entity>

</doctrine-mapping>